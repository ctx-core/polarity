		"polarity"
	],
	"homepage": "https://github.com/ctx-core/polarity#readme",
	"bugs": {
		"url": "https://github.com/ctx-core/polarity/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ctx-core/polarity.git"
	},
	"license": "Apache-2.0",
	"author": "Brian Takita",
	"type": "module",
	"files": [
		"*.d.ts",
		"*.js",
		"*.json",
		"./polarity_class_",
		"./polarity_text_"
	],
	"types": "./index.d.ts",
	"exports": {
